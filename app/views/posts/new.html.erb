<h1>Criar Novo Post</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %> <!-- Exibe erros caso haja -->
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "erro") %> proibiram este post de ser salvo:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "Criar Post" %>
  </div>
<% end %>

<%= link_to 'Voltar', posts_path %>  <!-- Link para voltar Ã  lista de posts -->